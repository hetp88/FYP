@model UserLogin;

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
    <title>Login</title>
    <style>
        body {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background-color: #DEBA9D;
            justify-content: left;
            padding: 38px;
            margin: 5px;
            flex: 1;
            width: 750px;
            height: 530px;
        }

        .form-group {
            margin-bottom: 0.5rem;
        }

        .form-label {
            color: #000000;
        }

        .form-control {
            background-color: #FFFFFF;
            color: #000000;
            border: none;
            border-radius: 5px;
            padding: 10px;
            height: 38px;
        }

        .checkbox-label {
            color: #000000;
            margin-left: 5px;
        }

        .btn-primary {
            background-color: #3C91E6;
            border-color: #3C91E6;
        }

            .btn-primary:hover {
                background-color: #1E73C0;
                border-color: #1E73C0;
            }

        .card-footer a {
            color: #000000;
        }

            .card-footer a:hover {
                color: #9BB1DA;
            }
    </style>
</head>

<body background="\Images\LoginBackground.jpg">
    <div class="container">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="card">
                <div class="card-header">
                    <img src="\Images\Logo.png" style="width: 225.5px; height: 62px;">
                </div>

                <div class="card-body">
                    <form>
                        <div class="mb-3 offset-md-4">
                            <h4>Welcome!</h4>
                        </div>

                        <div class="form-group col-md-4 mb-3 offset-md-4">
                            <input asp-for="UserID" class="form-control" placeholder="UserID" />
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4 mb-2 offset-md-4">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4 mb-2 offset-md-4">
                            <div class="form-control" style="background-color: transparent; border: none;">
                                <input asp-for="RememberMe" class="form-check-input"/>
                                <label asp-for="RememberMe">Remember Me</label>
                            </div>
                        </div>

                        <div class="form-group col-md-4 mb-2 offset-md-4">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                    <div class="mb-2 offset-md-4">
                        <a href="/Account/ForgetPassword">Forgot Password?</a>
                        <a href="/Account/Register" style="margin-left: 175px">Register</a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
                {
                    <div class="form-group ">
                        <div class="alert alert-warning" role="alert">
                            @ViewData["Message"]
                        </div>
                    </div>
                }

                <div class="card-footer">
                    <div class="offset-md-4">
                        <a href="/Account/Policy" style="margin-left: 40px">Privacy Policy</a>
                        <a href="/Account/TermsConditions" style="margin-left: 35px">Terms & Conditions</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>