@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Profile Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #5555
        }

        h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .container .btn {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: #4CAF50;
            color: #fff;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .container .btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Profile</h1>
        <p><label>User ID: </label><span id="userId"></span></p>
        <p><label>Email: </label><span id="email"></span></p>
        <p><label>Phone Number: </label><span id="phoneNumber"></span></p>
        <p><label>Name: </label><span id="name"></span></p>
        <p><label>School: </label><span id="school"></span></p>

        <div class="btn-container">
            <a class="btn" href="#">Change Password</a>
            <a class="btn" href="#">Update Email</a>
            <a class="btn" href="#">Update Phone Number</a>
        </div>
    </div>

    <script>
        // Example data - Replace with your actual data
        var profileData = {
            userId: "12345",
            email: "example@example.com",
            phoneNumber: "123-456-7890",
            name: "John Doe",
            school: "Example University"
        };
        // Set profile data in HTML elements
        document.getElementById("userId").innerText = profileData.userId;
        document.getElementById("email").innerText = profileData.email;
        document.getElementById("phoneNumber").innerText = profileData.phoneNumber;
        document.getElementById("name").innerText = profileData.name;
        document.getElementById("school").innerText = profileData.school;
    </script>
</body>
</html>

