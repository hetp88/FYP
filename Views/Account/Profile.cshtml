@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Profile Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #5555
        }

        h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .container .btn {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: #4CAF50;
            color: #fff;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .container .btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Profile</h1>
        <p><label>User ID: </label><span id="userId"></span></p>
        <p><label>Email: </label><span id="email"></span></p>
        <p><label>Phone Number: </label><span id="phoneNumber"></span></p>
        <p><label>Name: </label><span id="name"></span></p>
        <p><label>School: </label><span id="school"></span></p>

        <div class="btn-container">
            <button type="button" class="btn btn-primary btn-block" onclick="changePassword()">Change Password</button>
        <button type="button" class="btn btn-primary btn-block" onclick="updateEmail()">Update Email</button>
        <button type="button" class="btn btn-primary btn-block" onclick="updatePhoneNumber()">Update Phone Number</button>
        </div>
        
    </div>

    @*THE VALUES TO BE CHANGED AND EXTRACTED WHERE IT WILL SHOW THE details of the fella who logged in*@
    <script>
        function changePassword() {
            alert("Password changed successfully!");
        }
        function updateEmail() {
            var newEmail = prompt("Enter new email:");
            alert("Email updated successfully!");
        }
        function updatePhoneNumber() {
            var newPhoneNumber = prompt("Enter new phone number:");
            alert("Phone number updated successfully!");
        }
    </script>
</body>
</html>

