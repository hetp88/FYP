@model List<FYP.Models.Users>
@inject IHttpContextAccessor contextAccessor
@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Profile Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #5555
        }

        h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 10px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .container .btn {
            display: inline-block;
            margin-top: 10px;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: #4CAF50;
            color: #fff;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .container .btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>User Profile</h1>
        @foreach (var users in Model)
        {
            <p><label>User ID: </label>
                <ul>@users.userId</ul>
            </p>
            <p><label>Email: </label>
                <ul>@users.email</ul>
            </p>
            <p><label>Phone Number: </label>
                <ul>@users.phoneNo</ul>
            </p>
            <p><label>Name: </label>
                <ul>@users.username</ul>
            </p>
            <p><label>School: </label>
                <ul>@users.school</ul>
            </p>
        }

        <div class="btn-container">
            <button type="button" class="btn btn-primary btn-block" onclick="changePassword()">Change Password</button>
        <button type="button" class="btn btn-primary btn-block" onclick="updateEmail()">Update Email</button>
        <button type="button" class="btn btn-primary btn-block" onclick="updatePhoneNumber()">Update Phone Number</button>
        </div>
        
    </div>

    @*THE VALUES TO BE CHANGED AND EXTRACTED WHERE IT WILL SHOW THE details of the fella who logged in*@
    <script>
        function changePassword() {
            var newEmail = prompt("Enter updated password:");
            if (newEmail !== null) {
                alert("Password changed successfully!");
            } else {
                alert("Password change cancelled");
            }
        }

        function updateEmail() {
            var newEmail = prompt("Enter new email:");
            if (newEmail !== null) {
                alert("Email updated successfully!");
            } else {
                alert("Email not updated");
            }
        }

        function updatePhoneNumber() {
            var newPhoneNumber = prompt("Enter new phone number:");
            if (newPhoneNumber !== null) {
                alert("Phone number updated successfully!");
            } else {
                alert("Phone number update canceled.");
            }
        }
    </script>
</body>
</html>

