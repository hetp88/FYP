@model ChangePasswordViewModel
@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Change Phone Number</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #AAD1EE;
            color: #FFFFFF;
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
            height: 100vh;
        }

        .container {
            padding: 20px;
            color: black; 
            margin-top: 150px;
        }

        .form-group {
            margin-bottom: 10px;
            margin-left:390px;
            width: 450px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        .form-control {
            width: 70%;
            margin: 0 auto;
        }

        .btn {
            display: block;
            margin-top: 20px;
            height:40px;
            width: 100px;
            margin: auto;
        }
    </style>
</head>
<body background="\Images\MainBackground.jpg">
    <div class="container mt-5">
        <form method="post" action="/Account/EditProfile2">
            <div class="form-group text-center">
                <label for="PhoneNumber">New Phone Number</label>
                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control" required pattern="^[89]\d{7}$">
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</body>
</html>
