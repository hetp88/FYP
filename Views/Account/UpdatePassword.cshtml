@model ChangePasswordViewModel
@{
    Layout = "_Ticket";
}
<!DOCTYPE html>
<html>
<head>
    <title>Update Password</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #555;
            color: #fff;
        }

        h1 {
            text-align: center;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input[type="password"], button {
            margin-bottom: 10px;
        }

        .btn-container {
            text-align: center;
        }

        .button {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: #337ab7;
            color: #fff;
            text-decoration: none;
            transition: background-color 0.3s;
            cursor: pointer;
            border: none;
        }

            .button:hover {
                background-color: #23527c;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Update Password</h1>
        <form method="post" action="/Account/UpdatePassword">
            <div>
                <input type="password" class="form-control" input asp-for="NewPassword" placeholder="New Password" required>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div>
                <input type="password" class="form-control" input asp-for="ConfirmPassword" placeholder="Confirm New Password" required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="btn-container">
                <button type="submit" class="button">Update Password</button>
            </div>
        </form>
    </div>
</body>
</html>
