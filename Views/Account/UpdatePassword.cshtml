@model NewEmployee;
@{
    Layout = "_Ticket";
}

<style>
    
    .form-group {
        margin-top: 150px;
        margin-bottom: 10px;
        margin-left: 410px;
        width: 450px;
    }
    .btn {
        display: block;
        margin-top: 20px;
        height: 70px;
        width: 100px;
        margin: auto;
    }
</style>
<h2></h2>
<div class="container">
    @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.PasswordFor(model => model.EmpPw, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmpPw)
        </div>

        <button type="submit" class="btn btn-primary">Update Password</button>
    }
</div>