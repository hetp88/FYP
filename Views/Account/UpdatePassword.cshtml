@model NewEmployee;

<style>
    .card{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
        margin-top: 120px;
        border: none;
    }
</style>
<h2>Change Password</h2>
<div class="card">
    @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

        <div class="form-group">
        @Html.PasswordFor(model => model.EmpPw, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EmpPw)
        </div>

        <button type="submit" class="btn btn-primary">Update Password</button>
}
</div>