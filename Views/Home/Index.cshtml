@model List<FYP.Models.News>

@{
    Layout = "_Ticket";
}
<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-wrap: wrap; /* Allow cards to wrap on small screens */
            justify-content: space-between;
            margin: 20px;
            margin-top: 90px;
            max-width: 1400px;
            margin-left: 20px;
            margin-right: auto;
            max-height: 700px;
        }

        .card1 {
            flex-basis: 30%; 
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            font-size: 20px;
            background-color: #FFFFFF;
            border-radius: 25px;
            height: auto;
            color: black;
        }
        .card2 {
            flex-basis: 65%; 
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            font-size: 20px;
            background-color: #FFFFFF;
            border-radius: 25px;
            height: auto;
            color: black;
        }
        .news-container {
            flex-basis: 100%;
        }
        .table {
            background-color: #FFFFFF;
            color: black;
            box-shadow: 0;
            align-content: center;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 15px;
            border-radius: 4px;
            text-decoration: none;
            color: #FFFFFF;
            border: none;
            cursor: pointer;
            margin: 5px;
            transition: color 0.3s;
        }
        .card3 {
            flex-basis: 100%;
            padding: 10px;
            background-color: lightsteelblue;
            color: black;
            border-top: 1px solid #ccc;
            margin-top: auto; /* Pushes the card to the bottom */
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
        }

        #clock {
            font-size: 2em;
            color: #333;
        }

        #date {
            font-size: 1.2em;
            color: #666;
            margin-top: 10px;
        }
        .card3 .button{
            color: black;
        }
            .card3 .button:hover {
                color: white;
            }

    </style>
</head>
<body>
    <div class="container">

        <div class="card1">
            <h1>News Updates</h1>
            @if (Model == null || Model.Count == 0)
            {
                <p class="no-tickets-message">No Announcements available.</p>
            }
            else
            {
                <table class="table">
                    @foreach (var newsu in Model)
                    {
                        <tr>
                            <td>@newsu.newsU</td>
                        </tr>
                    }
                </table>
            }
        </div>

        <div class="card2">
            @if (User.IsInRole("administrator"))
            {
                <div id="date"></div>
                <div id="clock"></div>
            }
            else
            {
                <h1>Welcome to IT Helper</h1>
                <p>
                    <br />IT Helper will be your one-stop solution for the technical problems you face, software and hardware.<br />
                    <br />Our application will help you to conveniently report your problems or even provide you with solutions you might need under the FAQ section.<br />
                    <br />We will ensure that your problems will be settled as soon as possible and provide you with the best troubleshooting experience.
                </p>
            }
        </div>

        <div class="card3">
            <div class="button-container">
                <a href="mailto:rpIThelpdesk@outlook.com" class="button">Email Us</a>
                <a href="tel:9339 2019" class="button">Contact Us</a>
                <a href="/Account/TermsConditions" class="button">T&Cs</a>
                <a href="/Account/policy" class="button bi bi-question-circle"></a>
            </div>
        </div>

    </div>
</body>
<script>
    function updateTime() {
        const now = new Date();
        const hours = String(now.getHours()).padStart(2, '0');
        const minutes = String(now.getMinutes()).padStart(2, '0');
        const seconds = String(now.getSeconds()).padStart(2, '0');
        const timeString = `${hours}:${minutes}:${seconds}`;
        document.getElementById('clock').textContent = timeString;

        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        const dateString = now.toLocaleDateString('en-US', options);
        document.getElementById('date').textContent = dateString;
    }

    setInterval(updateTime, 1000); // Update every second
</script>
</html>
