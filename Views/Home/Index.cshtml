@model List<FYP.Models.News>
@{
    Layout = "_Ticket";
}
<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-wrap: wrap; /* Allow cards to wrap on small screens */
            justify-content: space-between;
            margin: 20px;
            margin-top: 70px;
            max-width: 1200px;
            margin-left: 20px;
            margin-right: auto;
        }

        .card1 {
            flex-basis: 30%; 
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            font-size: 20px;
            background-color: #FFFFFF;
            border-radius: 25px;
            height: auto;
            color: black;
        }
        .card2 {
            flex-basis: 65%; 
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            font-size: 20px;
            background-color: #FFFFFF;
            border-radius: 25px;
            height: auto;
            color: black;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 15px;
            border-radius: 4px;
            text-decoration: none;
            background-color: #3A71FF;
            color: #FFFFFF;
            border: none;
            cursor: pointer;
            margin: 5px;
            transition: background-color 0.3s;
        }

            .button:hover {
                background-color: #BEACDF;
            }

        .news-container {
            flex-basis: 100%;
        }

        .table {
            background-color: #FFFFFF;
            color: black;
            box-shadow: 0;
            align-content: center;
        }

        .card3 {
            flex-basis: 100%;
            padding: 10px;
            background-color: lightsteelblue;
            color: black;
            border-top: 1px solid #ccc;
            margin-top: auto; /* Pushes the card to the bottom */
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: start;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
        }

    </style>
</head>
<body>
    <div class="container">

        <div class="card1">
            <h1>News Updates</h1>
            @if (Model == null || Model.Count == 0)
            {
                <p class="no-tickets-message">No Announcements available.</p>
            }
            else
            {
                <table class="table">
                    @foreach (var newsu in Model)
                    {
                        <tr>
                            <td>@newsu.newsU</td>
                        </tr>
                    }
                </table>
            }
        </div>

        <div class="card2">
            <h1>Welcome to IT Helper</h1>
            <p>
                IT Helper will be your one-stop solution for the technical problems you face, software and hardware.
                Our application will help you to conveniently report your problems or even provide you with solutions you might need under the FAQ section.
                We will ensure that your problems will be settled as soon as possible and provide you with the best troubleshooting experience.
            </p>
            <div>
                <button class="button" onclick="location.href='/Ticket/AddTicket'">Report a problem!</button>
                <button class="button" onclick="location.href='/FAQ/Details'">Possible Solutions</button>
            </div>
        </div>

        <div class="card3">
            <button class="button" onclick="location.href='https://mail.google.com/mail/?view=cm&fs=1&tf=1'">Email us here!</button>
        </div>

    </div>
</body>
</html>
