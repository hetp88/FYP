@{
    Layout = "_Ticket";
}
<!DOCTYPE html>
<html>
<head>
    <title>Welcome to RP IT Helpdesk</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        header {
            text-align: center;
            margin-bottom: 20px;
        }

        h1 {
            color: #333;
        }

        main {
            max-width: 800px;
            margin: 0 auto;
        }

        p {
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="container">

        <h1 class="text-center">Submitted Ticket Details</h1>

        @if (Model == null || Model.Count == 0)
        {
            <p class="no-tickets-message">No tickets found.</p>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>User ID</th>
                    <th>Description</th>
                    <th>Category ID</th>
                    <th>Status ID</th>
                    <th>Date and Time</th>
                    <th>Priority ID</th>
                    <th>Employee ID</th>
                    <th>Devices Involved</th>
                    <th>Additional Details</th>
                    <th>Resolution</th>
                </tr>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.UserId</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.CategoryId</td>
                        <td>@ticket.StatusId</td>
                        <td>@ticket.DateTime</td>
                        <td>@ticket.PriorityId</td>
                        <td>@ticket.EmployeeId</td>
                        <td>@ticket.DevicesInvolved</td>
                        <td>@ticket.Additional_Details</td>
                        <td>@ticket.Resolution</td>
                    </tr>
                }
            </table>
        }
    </div>
</body>
</html>
