<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("BootstrapTableScripts", false)
</head>
<body>
    @if (User.Identity!.IsAuthenticated)
    {
        if (User.IsInRole("SupportEngineer"))
        {
            <partial name="TicketEmployee"/>
        }
        else if (User.IsInRole("HelpdeskAgent"))
        {
            <partial name="TicketEmployee"/>
        }
        else if (User.IsInRole("admin")){
            <partial name="TicketAdmin"/>
        }
        else
        {
            <partial name="TicketUser"/>
        }
    }
    else
    {
        <partial name="TicketGuest"/>
    }
    <div class="container mt-10">
        @RenderBody()
    </div>
</body>
</html>
