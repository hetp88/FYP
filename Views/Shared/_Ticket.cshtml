<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("BootstrapTableScripts", false)
</head>
<style>
    body {
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
        height: 100vh;
    }
</style>
<body background="\Images\MainBackground.jpg">
    @if ((User.Identity!.IsAuthenticated))
    {
        if (User.IsInRole("student"))
        {
            <partial name="TicketUser" />
        }
        else if (User.IsInRole("staff"))
        {
            <partial name="TicketUser" />
        }
        else if (User.IsInRole("helpdesk agent"))
        {
            <partial name="TicketEmployee" />
        }
        else if (User.IsInRole("support engineer"))
        {
            <partial name="TicketEmployee" />
        }
        else if (User.IsInRole("administrator"))
        {
            <partial name="TicketAdmin" />
        }
    }
    else
    {
        
    }
    <div class="container mt-10">
        @RenderBody()
    </div>
</body>
</html>