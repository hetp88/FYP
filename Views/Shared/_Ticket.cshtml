<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/umd/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("BootstrapTableScripts", false)
</head>
<style>
    body {
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        height: 120vh;
    }
</style>
<body  background="\Images\MainBackground.jpg">
    @if (User.Identity!.IsAuthenticated)
    {
        if (User.IsInRole("4"))
        {
            <partial name="TicketEmployee"/>
        }
        else if (User.IsInRole("3"))
        {
            <partial name="TicketEmployee"/>
        }
        else if (User.IsInRole("5")){
            <partial name="TicketAdmin"/>
        }
        else
        {
            <partial name="TicketUser"/>
        }
    }
    else
    {
        <partial name="TicketAdmin"/>
    }
    <div class="container mt-10">
        @RenderBody()
    </div>
</body>
</html>
