<head>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            font-size: 16px;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #3A71FF;
        }

        .logo {
            cursor: pointer;
            margin-right: auto;
            padding-left: 30px;
        }
        .nav_links {
            list-style: none;
            margin-right: auto;
            align-items: flex-end;
            margin: 20px;
        }

            .nav_links li {
                display: inline-block;
                padding: 0px 20px;
                margin-right: auto;
            }

                .nav_links li a {
                    transition: all 0.3s ease 0s;
                    margin-right: auto;
                    align-items: flex-start;
                }

        li, button {
            color: black;
            text-decoration: none;
            font-size: 24px;
        }

        .nav_links li:hover {
            color: lightgrey;
        }

        .navbar_links {
            display: flex;
            justify-content: flex-end;
            margin: 20px;
        }

            .navbar_links .nav-link {
                display: flex;
                align-items: center;
                margin-left: 10px;
                transition: color 0.3s ease; /* Transition for hover effect */
            }

                .navbar_links .nav-link:hover {
                    color: #0000; /* Color on hover */
                }
    </style>
</head>
<body>
    <header>
        <a class="logo" asp-controller="Home" asp-action="Index"><img src="\Images\Logo3.png" height="60"></a>
        <nav>
            <ul class="nav_links">
                <li><a class="nav-link" asp-controller="Ticket" asp-action="UserTicket">My Tickets</a></li>
                <li><a class="nav-link" asp-controller="FAQ" asp-action="Details">FAQ</a></li>
                <li><a class="nav-link" asp-controller="Ticket" asp-action="AddTicket">Report an Issue</a></li>
            </ul>
        </nav>
         <ul class="navbar_links">
            <li class="nav-item" style="list-style-type: none; display: flex; align-items: center;">
                <a class="nav-link" asp-controller="Account" asp-action="EmpProfile">
                    <span class="bi bi-person-circle icon-large white-profile-icon" style="margin-right: 5px;"></span>
                </a>

                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <span class="bi bi-box-arrow-in-right text-muted bigger-icon" data-toggle="tooltip" title="Log out" style="margin-left: 1px" onclick="showMessage()"></span>
                </a>
            </li>
        </ul>
    </header>
    <div class="line"></div>
</body>




