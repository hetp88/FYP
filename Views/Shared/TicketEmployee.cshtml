<head>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;

        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 5%;
            background-color: #BEACDF;

        }

        .logo {
            cursor: pointer;
            margin-right: auto;
        }

        .nav_links {
            list-style: none;
            margin-right: auto;
            align-items: flex-start;
        }

            .nav_links li {
                display: inline-block;
                padding: 0px 20px;
                margin-right: auto;
            }

                .nav_links li a {
                    transition: all 0.3s ease 0s;
                    margin-right: auto;
                    align-items: flex-start;
                }

        li, button {
            color: black;
            text-decoration: none;
            font-size: 24px;
        }

        .nav_links li:hover {
            color: lightgrey;
        }

        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            padding: 10px;
            border-radius: 4px;
            font-size: 14px;
        }

            .dropdown-content a {
                display: block;
                padding: 8px 12px;
                color: #333;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

                .dropdown-content a:hover {
                    background-color: #0000 /* Change the background color on hover */
                    ;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .line {
            border-top: 1px solid lightslategrey;
        }

        .navbar_links {
            display: flex;
            justify-content: flex-end;
            border-radius: 4px;
        }

            .navbar_links .nav-link {
                display: flex;
                align-items: center;
                margin-left: 10px;
                transition: color 0.3s ease; /* Transition for hover effect */
            }

                .navbar_links .nav-link:hover {
                    color: black; /* Color on hover */
                }
    </style>
</head>
<body>
    <header>
        <nav>
            <ul class="nav_links">
                <li><a class="logo" asp-controller="Home" asp-action="Index"><img src="\Images\Logo3.png" height="60"></a></li>
                <li class="dropdown">
                    <a>FAQ</a>
                    <div class="dropdown-content">
                        <a class="dropdown-item bi bi-binoculars" href="~/FAQ/Details"> FAQs</a> @*users, employee & admins*@
                        <a class="dropdown-item bi bi-clipboard2-plus" href="~/FAQ/Create"> New FAQ</a> @*admins and employee only*@
                    </div>
                </li>
                <li class="dropdown">
                    <a>Tickets</a>
                    <div class="dropdown-content">
                        <a class="dropdown-item bi bi-list-check" href="~/Ticket/ToDoTicket">To Do </a> @*Employees*@

                        @if (User.IsInRole("helpdesk agent"))
                        {
                            <a class="dropdown-item bi bi-clipboard2-plus" href="~/Ticket/AddTicket"> Submit Ticket</a> @*users and helpdesk agent*@
                        }
                    </div>
                </li>
                <li class="dropdown">
                    <a>Schedule & Leave</a>
                    <div class="dropdown-content">
                        <a class="dropdown-item bi bi-calendar" href="~/Employee/Schedule"> Calendar</a> @*employee & admins*@
                        <a class="dropdown-item bi bi-clock" href="~/Employee/ApplyLeave"> Apply Leave</a> @*can be for employee only OR employee & admins*@
                        <a class="dropdown-item bi bi-calendar-date" href="~/Employee/LeaveRequests"> Leave</a> @*Admins Only*@
                    </div>
                </li>
            </ul>
        </nav>
        <ul class="navbar_links">

            <li class="dropdown" style=" list-style-type: none; display: flex; align-items: center;">
                <a class="dropdown-item bi bi-bell"></a>
                <div class="dropdown-content">
                    @if(ViewBag.Notifications != null)
                    {
                        foreach(var notifications in ViewBag.Notifications)
                        {
                            <a class="notification-item" @Url.Action("HAUpdateTicket", "Ticket", new { TicketId = notifications.TicketId })>@notifications</a>
                        }
                    }
                    else
                    {
                        <div>No newly assigned tickets</div>
                    }
                </div>
            </li>

            <li></li>

            <li class="nav-item" style="list-style-type: none; display: flex; align-items: center;">

                <a class="nav-link" asp-controller="Account" asp-action="EmpProfile">
                    <span class="bi bi-person-circle icon-large" style="margin-right: 5px;"></span>
                </a>

                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <span class="bi bi-box-arrow-in-right text-muted bigger-icon" data-toggle="tooltip" title="Log out" style="margin-left: 1px;"></span>
                </a>
            </li>
        </ul>
    </header>
    <div class="line"></div>
</body>