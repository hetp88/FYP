@model FYP.Models.Ticket;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
    <style>

    </style>
</head>
<body>
    <div class="container">
        <h1>Ticket Details</h1>
        <div class="container">
            <h1>Ticket Details</h1>

            <div>
                <p>
                    <label>Ticket ID: </label>
                    <span>@Model.TicketId</span>
                </p>
            </div>
            <div>
                <p>
                    <label>User ID: </label>
                    <span>@Model.UserId</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Type: </label>
                    <span>@Model.Type</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Description: </label>
                    <span>@Model.Description</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Category: </label>
                    <span>@Model.Category</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Status: </label>
                    <span>@Model.Status</span>
                </p>
            </div>
            <div>
                <p>
                    <label>DateTime: </label>
                    <span>@Model.DateTime</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Priority: </label>
                    <span>@Model.Priority</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Employee Name: </label>
                    <span>@Model.EmployeeName (@Model.Employee)</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Devices Involved: </label>
                    <span>@Model.DevicesInvolved</span>
                </p>
            </div>
            <div>
                <p>
                    <label>Additional Details: </label>
                    <span>@Model.Additional_Details</span>
                </p>
            </div>
         </div>
        
        <h2>Escalate Ticket</h2>
        <form method="post" action="/Ticket/EscalateTicket">
            <div class="form-group">
                <label for="status">Status:</label>
                <select class="form-control" id="status" required>
                    <option value="">Select status update</option>
                    <option value="pending">Pending</option>
                    <option value="logged">Logged</option>
                    <option value="on hold">On hold</option>
                    <option value="solved">Solved</option>
                    <option value="closed">Closed</option>
                </select>
            </div>
            <button></button>
        </form>
    </div>
</body>
</html>

