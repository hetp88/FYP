@model List<FYP.Models.Ticket>
@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Tickets </title>
</head>
<body>
    <div class="container">

        @if (Model == null || Model.Count == 0)
        {
            <p class="no-tickets-message">No tickets found.</p>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>User ID</th>
                    <th>Ticket Type</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>DateTime</th>
                    <th>Priority</th>
                    <th>Devices Involved</th>
                    <th>Additional Details</th>
                    <th>Resolution</th>
                </tr>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.UserId</td>
                        <td>@ticket.Type</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.Category</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.DateTime</td>
                        <td>@ticket.Priority</td>
                        <td>@ticket.DevicesInvolved</td>
                        <td>@ticket.Additional_Details</td>
                        <td>@ticket.Resolution</td>
                    </tr>
                }
            </table>
        }
    </div>
</body>
</html>
