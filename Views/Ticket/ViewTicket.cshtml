@model List<FYP.Models.Ticket>

@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Tickets</title>
    <style>
        .container {
            margin-top: 30px;
            background: #FFFFFF;
            padding: 20px;
        }

        .search-form {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .search-form input[type="text"],
            .search-form select {
                padding: 8px;
                width: 200px;
            }

            .search-form button {
                padding: 2px 4px;
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .no-tickets-message {
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="get" action="/Ticket/ViewTicket" class="search-form">
            <div>
                <input type="text" name="userIdQuery" placeholder="User ID" />
            </div>
            <div>
                <input type="text" name="ticketTypeQuery" placeholder="Ticket Type" />
            </div>         
            <div>
                <input type="text" name="statusQuery" placeholder="Status" />
            </div>           
            <div>
                <input type="text" name="priorityQuery" placeholder="Priority" />
            </div>
            <div>
                <input type="text" name="resolutionQuery" placeholder="Resolution" />
            </div>
            <div>
                <input type="text" name="employeeQuery" placeholder="Employee In-Charge" />
            </div>
            <div>
                <button type="submit">Search</button>
            </div>
        </form>

        @if (Model == null || Model.Count == 0)
        {
            <p class="no-tickets-message">No tickets available.</p>
        }
        else
        {
            <table>
                <tr>
                    <th>Ticket ID</th>
                    <th>User ID</th>
                    <th>Ticket Type</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>DateTime</th>
                    <th>Priority</th>
                    <th>Devices Involved</th>
                    <th>Additional Details</th>
                    <th>Resolution</th>
                    <th>Employee In-Charge</th>
                    @if (User.IsInRole("administrator") || User.IsInRole("helpdesk agent") || User.IsInRole("support engineer"))
                    {
                        <th>Action</th>
                    }
                </tr>

                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketId</td>
                        <td>@ticket.UserId</td>
                        <td>@ticket.Type</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.Category</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.DateTime</td>
                        <td>@ticket.Priority</td>
                        <td>@ticket.DevicesInvolved</td>
                        <td>@ticket.Additional_Details</td>
                        <td>@ticket.Resolution</td>
                        <td>@ticket.EmployeeName</td>

                        @if (User.IsInRole("administrator") || User.IsInRole("helpdesk agent") || User.IsInRole("support engineer"))
                        {
                            <td>
                                <a href="/Ticket/Delete/@ticket.TicketId" style="text-decoration:none; color:indianred"
                                   onclick="return confirm('Delete ticket with ID @ticket.TicketId?')">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </td>
                        }
                    </tr>
                }
            </table>
        }
    </div>
</body>
</html>
