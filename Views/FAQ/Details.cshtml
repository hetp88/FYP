@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .faq-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .faq-question {
            font-weight: bold;
            cursor: pointer;
        }

        .faq-answer {
            display: none;
            margin-top: 10px;
        }

            .faq-answer.show {
                display: block;
            }
    </style>
</head>
<body>
    <div class="faq-container">
        
    </div>

    <script>
        // JavaScript to toggle FAQ answer visibility
        var faqQuestions = document.getElementsByClassName('faq-question');
        Array.from(faqQuestions).forEach(function (question) {
            question.addEventListener('click', function () {
                this.nextElementSibling.classList.toggle('show');
            });
        });
    </script>
</body>
</html>
