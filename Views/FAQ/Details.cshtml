@model List<FYP.Models.FAQ>
@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #E8E3DF;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        p {
            line-height: 1.5;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th, .table td {
                border-bottom: 1px solid black;
                padding: 8px;
            }

        .no-tickets-message {
            text-align: center;
            margin-top: 20px;
            font-style: italic;
        }
    </style>
    <title>FAQs</title>
</head>
<body>
    <div class="container">

        @if (Model == null || Model.Count == 0)
        {
            <p class="no-tickets-message">No FAQ available.</p>
        }
        else
        {
            <table class='table table-striped table-hover'>
                <tr>
                    <th style="text-align:center">ID</th>
                    <th style="text-align:center">Question</th>
                    <th style="text-align:center">Solution</th>
                    <th style="text-align:center">Category</th>
                    <th style="text-align:center">Action</th>
                </tr>
           
                @foreach (var fAQ in Model)
                {
                    <tr>
                        <td style="text-align:center">@fAQ.FaqId</td>
                        <td style="text-align:center">@fAQ.Question</td>
                        <td style="text-align:center">@fAQ.Solution</td>
                        <td style="text-align:center">@fAQ.Category</td>
                        <td style="text-align:center">
                            <a href="/FAQ/Delete/@fAQ.FaqId"
                               style="text-decoration:none; color:indianred"
                               onclick="return confirm('Delete product "@fAQ.Question?"')">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</body>
</html>
