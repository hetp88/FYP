@model List<FYP.Models.FAQ>
@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>FAQs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .card {
            margin-top: 110px;
            background: #FFFFFF;
            padding: 20px;
            border: none;
        }

        .search-form {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .search-form input[type="text"],
            .search-form select {
                padding: 8px;
                width: 200px;
            }

            .search-form .search-box {
                position: relative;
            }

                .search-form .search-box input[type="text"] {
                    padding-right: 30px; /* To accommodate the "X" icon */
                }

            .search-form .cancel-icon {
                display: none;
                position: absolute;
                top: 50%;
                right: 13px;
                transform: translateY(-50%);
                cursor: pointer;
                color: #aaa;
            }

            .search-form input[type="text"]:not(:placeholder-shown) + .cancel-icon {
                display: inline;
            }

            .search-form button {
                padding: 8px 16px;
                background-color: #3A71FF;
                color: white;
                border: none;
                cursor: pointer;
                border-radius: 15px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .no-tickets-message {
            text-align: center;
            font-weight: bold;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <div class="card">
        <form method="get" action="/FAQ/Details" class="search-form">
            <div class="search-box">
                <input type="text" name="questionQuery" placeholder="Question" />
                <span class="cancel-icon" onclick="clearSearchInput()"><i class="fas fa-times-circle"></i></span>
            </div>
            <div>
                <select name="categoryQuery">
                    <option value="">Select a category</option>
                    <option value="1">Software</option>
                    <option value="2">Hardware</option>
                    <option value="3">Network Connectivity</option>
                    <option value="4">Access Portal</option>
                    <!-- Add more options for other categories -->
                </select>
            </div>
            <div>
                <button class="btn btn-primary bi bi-search" type="submit"></button>
            </div>
        </form>

        @if (Model == null || Model.Count == 0)
        {
            <p class="no-tickets-message">No FAQ available.</p>
        }
        else
        {
            <table>
                <tr>
                    <th>Question</th>
                    <th>Solution</th>
                    <th>Category</th>
                    @if (User.IsInRole("administrator") || User.IsInRole("helpdesk agent") || User.IsInRole("support engineer"))
                    {
                        <th>Action</th>
                    }
                </tr>

                @foreach (var faq in Model)
                {
                    <tr>
                        <td>@faq.Question</td>
                        <td>
                            <a href="@Url.Action("Solution", "FAQ", new { FaqId = faq.FaqId })" class="btn btn-primary">View Solution</a>
                        </td>
                        <td>@faq.Category</td>

                        @if (User.IsInRole("administrator") || User.IsInRole("helpdesk agent") || User.IsInRole("support engineer"))
                        {
                            <td>
                                <a href="/FAQ/Delete/@faq.FaqId" style="text-decoration:none; color:indianred"
                                   onclick="return confirm('Delete FAQ with ID @faq.FaqId?')">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </td>
                        }
                    </tr>
                }
            </table>
        }
    </div>
    <script>
        function clearSearchInput() {
            document.getElementsByName("questionQuery")[0].value = "";
        }
    </script>
</body>
</html>
