@model FYP.Models.Employee

@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Edit Employee</title>
    <style>
        /* Add your custom styles here */
    </style>
</head>
<body>
    <div class="container">
        <h2>Edit Employee</h2>
        <form method="post" action="@Url.Action("EditEmployee", "Employee")">
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input type="email" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone_no">Phone Number:</label>
                <input type="text" asp-for="Phone_no" class="form-control" />
            </div>
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="EmployeeList" class="btn btn-secondary">Cancel</a>
            </div>
        <div>
            <!-- Add more input fields for other employee properties as needed -->
        </div>
        <button type="submit">Save</button>
    </form>
</body>
</html>
