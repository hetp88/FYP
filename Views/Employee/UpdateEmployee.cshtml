@model FYP.Models.Employee

@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Update Employee Information</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
        }

        .card {
            max-width: 900px;
            margin-top: 150px;
            margin: auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            
        }

            .card h1 {
                text-align: center;
                color: black;
                font-size: 29px;
                margin-bottom: 20px;
                font-weight: bold;
            }

        .form-group {
            display: flex;
            flex-direction: row;
            align-items: center;
            margin-bottom: 15px;
        }

            .form-group label {
                flex: 1;
                font-weight: bold;
                color: #555;
                margin-right: 10px;
            }

            .form-group input[type="text"],
            .form-group input[type="email"],
            .form-group select {
                flex: 2;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

            .form-group select {
                appearance: none;
                -webkit-appearance: none;
                background-image: url('data:image/svg+xml;utf8,<svg fill="#007BFF" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/><path d="M0 0h24v24H0z" fill="none"/></svg>');
                background-repeat: no-repeat;
                background-position: right 8px center;
                background-size: 20px;
                padding-right: 30px;
            }

        .btn-save {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            margin-left: auto;
        }

            .btn-save:hover {
                background-color: #0056b3;
            }

        .btn-back {
            background-color: #007BFF;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            
        }

            .btn-save:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="card">
        <h1>Update Employee</h1>
        <form method="post" action="/Employee/SaveEmployee">
            <input type="hidden" name="employeeId" value="@Model.EmployeeId" />
            <div class="form-group">
                <label>Employee ID:</label>
                <span>@Model.EmployeeId</span>
            </div>
            <div class="form-group">
                <label>Role:</label>
                <span>@Model.Role</span>
            </div>
            <div class="form-group">
                <label>Name:</label>
                <input type="text" name="name" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" value="@Model.Email" />
            </div>
            <div class="form-group">
                <label>Phone Number:</label>
                <input type="text" name="phone_no" value="@Model.Phone_no" />
            </div>
            <div class="form-group">
                <label>Number of Tickets Assigned:</label>
                <input type="text" name="no_tickets" value="@Model.no_tickets" />
            </div>
            <div class="form-group">
                <label>Number of Tickets Closed:</label>
                <input type="text" name="closed_tickets" value="@Model.closed_tickets" />
            </div>
            <div class="form-group">
                <label>Account Status:</label>
                <select name="accStatus">
                    <option value="">-- Select status --</option>
                    <option value="Active">Active</option>
                    <option value="Suspended">Suspended</option>
                    <option value="Resigned">Resigned</option>
                </select>
            </div>
            <div style="display: flex; justify-content: space-between;">
                <a href="/Employee/EmployeeList" class="btn-back">Back</a>
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>
    </div>
</body>
</html>
