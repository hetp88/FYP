@model FYP.Models.NewEmployeeViewModel

@{
    ViewData["Title"] = "New Employee";
}

<h1>New Employee</h1>

@using (Html.BeginForm("CreateNewEmployee", "Employee", FormMethod.Post))
{
    <div class="form-group">
        <label for="RolesId">Select Role:</label>
        <select asp-for="RolesId" class="form-control" required>
            <option value="">-- Select Role --</option>
            <option value="3">Helpdesk Agent</option>
            <option value="4">Support Engineer</option>
            <option value="5">Administrator</option>
        </select>
        <span asp-validation-for="RolesId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Name:</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PhoneNo">Phone Number:</label>
        <input asp-for="PhoneNo" class="form-control" required />
        <span asp-validation-for="PhoneNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Password">Password:</label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Employee</button>
}
