@model List<FYP.Models.EmployeeList>

@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <style>
        .container {
            margin-top: 30px;
            background: #FFFFFF;
        }
    </style>
</head>
<body>
    <div class="container">

        @if (Model == null || Model.Count == 0)
        {
            <p class="no-employees-message">No employees available.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th style="text-align:center">Employee ID</th>
                        <th style="text-align:center">Roles ID</th>
                        <th style="text-align:center">Name</th>
                        <th style="text-align:center">Email</th>
                        <th style="text-align:center">Phone Number</th>
                        <th style="text-align:center">Tickets</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td style="text-align:center">@employee.EmployeeId</td>
                            <td style="text-align:center">@employee.RolesId</td>
                            <td style="text-align:center">@employee.Name</td>
                            <td style="text-align:center">@employee.Email</td>
                            <td style="text-align:center">@employee.PhoneNo</td>
                            <td style="text-align:center">@employee.Tickets</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>
