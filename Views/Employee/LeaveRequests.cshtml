@model List<FYP.Models.EmployeeSchedule>

@{
    Layout = "_Ticket";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.2/css/bootstrap.min.css">
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
        /* Add your custom styles here */
        .card {
            margin-top: 150px;
            width: auto;
            background: #FFFFFF;
            border-radius: 20px;
            padding: 10px;
        }

        .table {
            margin-bottom: 30px;
            border-collapse: collapse;
            width: 100%;
        }

            .table th,
            .table td {
                padding: 8px;
                text-align: center;
            }

            .table th {
                background-color: #f2f2f2;
            }

            .table td {
                border: none;
                border-bottom: 1px solid #dee2e6;
            }

                .table td:last-child {
                    border-right: none;
                }

        .btn-primary {
            background-color: #28a745; /* Green color */
            border-color: #28a745; /* Green color */
        }

            .btn-primary:hover {
                background-color: #218838; /* Darker shade of green */
                border-color: #218838; /* Darker shade of green */
            }

        /* Add custom styles for the cancel icon */
        .search-form .search-box {
            position: relative;
            
        }

        .search-form input[type="text"],
        .search-form select {
            padding: 8px;
            width: 200px;
        }

        .search-form .cancel-icon {
            display: none;
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #aaa; /* Light grey color for the X icon */
        }

        .search-form input[type="text"]:not(:placeholder-shown) + .cancel-icon,
        .search-form select:not(:placeholder-shown) + .cancel-icon {
            display: inline;
        }
    </style>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        window.onload = function () {
            clearSearchInput();
        };

        function clearSearchInput() {
            var searchInputs = document.querySelectorAll(".search-form input[type='text'], .search-form select");
            for (var i = 0; i < searchInputs.length; i++) {
                searchInputs[i].value = "";
            }
        }

        function searchLeaveRequests() {
            var employeeId = document.getElementById("employeeId").value;
            var startDate = document.getElementById("startDate").value;
            var endDate = document.getElementById("endDate").value;
            var reason = document.getElementById("reason").value;
            var status = document.getElementById("status").value;

            // Redirect to the SearchLeaveRequests action with the provided search parameters
            window.location.href = "/Employee/SearchLeaveRequests?employeeId=" + employeeId
                + "&startDate=" + startDate + "&endDate=" + endDate + "&reason=" + reason + "&status=" + status;
        }
    </script>
</head>
<body>
    <div class="card">
        <h1></h1>

        <div class="row search-form">
            <div class="col search-box">
                <input type="text" class="form-control" id="employeeId" placeholder="Enter employee ID">
                <span class="cancel-icon" onclick="clearSearchInput()"><i class="fas fa-times-circle"></i></span>
            </div>
            <div class="col search-box">
                <input type="date" class="form-control" id="startDate" placeholder="Start Date">
                <span class="cancel-icon" onclick="clearSearchInput()"><i class="fas fa-times-circle"></i></span>
            </div>
            <div class="col search-box">
                <input type="date" class="form-control" id="endDate" placeholder="End Date">
                <span class="cancel-icon" onclick="clearSearchInput()"><i class="fas fa-times-circle"></i></span>
            </div>
            <div class="col search-box">
                <input type="text" class="form-control" id="reason" placeholder="Enter reason">
                <span class="cancel-icon" onclick="clearSearchInput()"><i class="fas fa-times-circle"></i></span>
            </div>
            <div class="col search-box">
                <select id="status" name="status" class="form-control">
                    <option value="">Select a status</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                    <option value="Pending">Pending</option>
                </select>
                <span class="cancel-icon" onclick="clearSearchInput()"><i class="fas fa-times-circle"></i></span>
            </div>
            <div class="col search-box" style="margin-left: 80px;">
                <button class="btn btn-primary" onclick="searchLeaveRequests()">Search</button>
            </div>
        </div>

        <!-- Table shifted to the right -->
        <table class="table">
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var leave in Model)
                {
                    <tr>
                        <td>@leave.EmployeeId</td>
                        <td>@leave.StartDate.ToShortDateString()</td>
                        <td>@leave.EndDate.ToShortDateString()</td>
                        <td>@leave.Reason</td>
                        <td>@leave.IsApproved</td>
                        <td>
                            <a href="@Url.Action("ReviewLeave", "Employee", new { leaveId = leave.LeaveId })" class="btn btn-primary">Review</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
